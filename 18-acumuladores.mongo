db.contas.aggregate({
    $group:{
        _id: "$tipo",
        media: {
            $avg: "$valor"
        }
    }
})

db.contas.aggregate({
    $group:{
        _id: "$tipo",
        maximo: {
            $max: "$valor"
        }
    }
})

db.contas.aggregate({
    $group:{
        _id: "$tipo",
        minimo: {
            $min: "$valor"
        }
    }
})

db.contas.aggregate({
    $group:{
        _id: "$tipo",
        contagem: {
            $count: {}
        }
    }
})

db.contas.aggregate({
    $group:{
        _id: "$tipo",
        total: {
            $sum: {$trunc:["$valor",2]}
        }
    }
})

